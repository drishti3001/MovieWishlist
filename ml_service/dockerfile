# 1. Use an official Python runtime
FROM python:3.9-slim

# 2. Set the working directory to /app
WORKDIR /app

# 3. Install build dependencies
RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

# 4. Copy requirements from the current folder (ml_service) and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 5. Copy all files from the current folder (ml_service) into /app
COPY . .

# 6. Expose the port
EXPOSE 8000

# 7. Start uvicorn. 
# Since app.py is now directly in /app, we use "app:app"
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]